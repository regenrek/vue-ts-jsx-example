{
    "compilerOptions": {
      "target": "es6",
      "module": "esnext",
      "strict": true,
      "allowJs": false,
      "jsx": "preserve",
      "jsxFactory": "VueTsxSupport",
      "importHelpers": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "noImplicitAny": false,
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "baseUrl": ".",
      "declaration": true,
      "declarationDir": "./typings",
      "experimentalDecorators": true,
      "rootDir": "packages",
      "paths": {
        "@/*": [
          "src/*"
        ]
      },
      "lib": [
        "esnext",
        "dom",
        "dom.iterable",
        "scripthost"
      ]
    },
    "include": [
      "packages/**/*.ts",
      "packages/**/*.tsx",
      "node_modules/vue-tsx-support/enable-check.d.ts"
    ],
    "exclude": [
      "src",
      "node_modules",
      "**/node_modules" // avoid yarn linked errors
    ]
  }
  